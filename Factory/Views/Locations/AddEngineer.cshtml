@{
    Layout = "_Layout";
}

@model Factory.Models.Location

<h2>Add an engineer</h2>

<h4>Add an engineer to this location: @Html.DisplayFor(model => model.Facility)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.LocationId)

  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId")
  <input type="submit" value="Add engineer" />
}

<p>@Html.ActionLink("Back to Locations", "Index")</p>