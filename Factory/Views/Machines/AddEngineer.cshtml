@{
    Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add an engineer</h2>

<h4>Add an engineer specialist for this machine: @Html.DisplayFor(model => model.Model)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId")
  <input type="submit" value="Add engineer" />
}

<p>@Html.ActionLink("Back to machines", "Index")</p>
